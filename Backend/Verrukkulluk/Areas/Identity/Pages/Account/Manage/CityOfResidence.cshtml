@page
@model CityOfResidenceModel
@{
    ViewData["Title"] = "Woonplaats wijzigen";
    ViewData["ActivePage"] = ManageNavPages.CityOfResidence;
}

<h3 class="darker-green">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <p>Huidige woonplaats: <strong class="darker-green">@Model.CityOfResidence</strong></p>
            <p>Bent u verhuisd?</p>
            <p>Dan kunt u dat hieronder aanpassen:</p>
        </div>
        <form id="city-of-residence-form" method="post">
            <div class="form-floating mb-3 w-50">
                <input asp-for="Input.NewCityOfResidence" class="form-control" aria-required="true" placeholder="Voer uw nieuwe woonplaats in." value="@Model.CityOfResidence" />
                <label asp-for="Input.NewCityOfResidence" class="form-label"></label>
                <span asp-validation-for="Input.NewCityOfResidence" class="lightest-brown"></span>
            </div>
            <button id="change-city-button" type="submit" asp-page-handler="ChangeCityOfResidence" class="w-50 btn btn-lg submit-profile">Update uw woonplaats</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
