@{
    ViewData["Title"] = "Mijn Boodschappenlijst";
}
<div class="parent-container d-flex flex-wrap">
    <!--Login block-->
    <div class="container col-sm-12 col-md-6 col-xl-4">
        <div class="row">
            <div class="col-12">
                <div class="m-3">
                    <div class="card-login shadow">
                        <div class="card-header card-header-login mt-3 mb-3">
                            <img class="titleUnderlined mt-3" src="../images/Login-met-streep.png">
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="container container-login text-start">
                                    <div class="form-group">
                                        <label for="email" class="white">Email</label>
                                        <input type="email" class="form-control" id="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="white">Wachtwoord</label>
                                        <input type="password" class="form-control" id="password">
                                    </div>
                                    <div class="text-center">
                                        <p>Nog geen account? Klik @{
                                                <a asp-area="Identity" asp-page="/Account/Register">hier</a>
                                            } om u te registreren</p>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-secondary"><h3>Login</h3></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
