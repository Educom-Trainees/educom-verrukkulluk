<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Verrukkulluk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Verrukkulluk.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.2.2/font/bootstrap-icons.css">
</head>
<body>
    <header>
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Verrukkulluk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav> *@
        
        <!--Courousel-->
        <div id="carousel" class="carousel slide" data-bs-ride="carousel">

            <!--Indicators-->
            <div class="carousel-indicators">
                <button data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
                <button data-bs-target="#carousel" data-bs-slide-to="1"></button>
                <button data-bs-target="#carousel" data-bs-slide-to="2"></button>
            </div>

            <!--Images-->
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/images/pexels-ella-olsson.jpg" alt="pexels-ella-olsson" class="d-block w-100" />
                </div>
                
                <div class="carousel-item" data-bs-interval="10000">
                    <img src="~/images/pexels-jane-doan.jpg" alt="pexels-jane-doan" class="d-block w-100" />
                </div>
                
                <div class="carousel-item" data-bs-interval="10000">
                    <img src="~/images/pexels-robin-stickel.jpg" alt="pexels-robin-stickel" class="d-block w-100" />
                </div>
            </div>

            <!--Overlay Image-->
            <div class="verrukkulluk-logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/images/verrukkulluk-logo.png" alt="verrukkulluk-logo" />
                </a>
            </div>
        </div>

        <!--Search bar and Offcanvas button toggle-->
        <div class="container">
            <div class="d-flex justify-content-between align-items-end">
                <div class="search-bar">
                    <!--Moet nog een actie ingevuld worden-->
                    <form class="d-flex" action="" method="GET">
                        <div class="input-group">
                            <button class="btn btn-custom border-custom" type="submit">
                                <i class="bi bi-search icon-adjust"></i>
                            </button>
                            <input class="form-control border-custom me-2" type="search" placeholder="Zoeken" aria-label="Search">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!--Overlay Toggle Top Offcanvas -->
        <div class="offcanvas offcanvas-top" id="demo">
            <div class="offcanvas-body d-flex align-items-center">
                <div class="verrukkulluk-logo-dynamic d-inline d-none d-lg-block">
                    <img src="~/images/verrukkulluk-logo.png" alt="verrukkulluk-logo"/>
                </div>
                <div class="d-inline">
                    <div class="ms-auto me-5 lighter-red">
                        <h2>Mijn favorieten</h2>
                    </div>
                </div>
                <div class="d-inline">
                    <div class="me-5 lighter-red">
                        <h2>Mijn boodschappenlijst</h2>
                    </div>
                </div>
                <div class="d-inline">
                    <div class="me-5 lighter-red">
                        <h2>Uitloggen</h2>
                    </div>
                </div>
            </div>
        </div>

        <!--Overlay button toggle-->
        <div class="container">
            <div class="d-flex justify-content-end">
                <button id="toggleButton" class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#demo">
                    <i class="bi bi-list lighter-orange"></i>
                </button>
            </div>
        </div>
    </header>

    <div class="container" style="padding-bottom:240px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container mt-5 mb-5">
            <div class="d-inline-flex">
                <div>
                    <img id="simpleLogo" src="~/images/logo-zonder-verrukkeluk.png">
                </div>
                <div>
                    <h1>Contact</h1>
                    <p>
                        Verrukkulluk.nl <br />
                        Poststraat 2b <br />
                        Sittard <br />
                        info@verrukkulluk.nl <br />
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
